.col-lg-7.col-md-10.col-xs-12.col-sm-10.no-float.center-block
	%article.card.big-padding
		%header
			%h1.grey-text.bold= @product.name
		%div
			.col-xs-6.col-md-5.col-xs-12.no-padding.inline-block
				Imagen del producto
			.col-md-1.inline-block.hidden-xs
			.col-xs-5.col-md-6.inline-block.text-left
				%h3.blue-text.bold.normal= @product.user.email
				%h3.teal-text.bold.normal
					Precio:
					%span.grey-text$#{@product.pricing}
